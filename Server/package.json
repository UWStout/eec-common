{
  "name": "karuna-server",
  "version": "0.1.0",
  "description": "Backend server / RESTful API for the Karuna communication tool.",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src src/server.js dev",

    "build": "run-s build-deps client admin",
    "build-deps": "bash copyDeps.sh",

    "preclient": "rm -f ./views/auth/*.js ./views/auth/*.js.map",
    "client": "esbuild --bundle --minify --define:_DEV_=false --define:process.env.NODE_ENV=\\\"production\\\" --outdir=views/auth ./client/LoginPage.jsx ./client/LogoutPage.jsx ./client/RegisterPage.jsx ./client/RecoveryPage.jsx",
    "clientdev": "esbuild --watch --bundle --sourcemap --define:_DEV_=true --define:process.env.NODE_ENV=\\\"development\\\" --outdir=views/auth ./client/LoginPage.jsx ./client/LogoutPage.jsx ./client/RegisterPage.jsx ./client/RecoveryPage.jsx",

    "preadmin": "rm -f ./views/dbAdmin/*.js ./views/dbAdmin/*.js.map",
    "admin": "esbuild --bundle --minify --define:_DEV_=false --define:process.env.NODE_ENV=\\\"production\\\" --outdir=views/dbAdmin ./client/UserManagementPage.jsx ./client/TeamManagementPage.jsx ./client/OrgUnitManagementPage.jsx",
    "admindev": "esbuild --watch --bundle --sourcemap --define:_DEV_=true --define:process.env.NODE_ENV=\\\"development\\\" --outdir=views/dbAdmin ./client/UserManagementPage.jsx ./client/TeamManagementPage.jsx ./client/OrgUnitManagementPage.jsx",

    "test": "mocha"
  },
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "private": true,
  "nodemonConfig": {
    "env": {
      "DEBUG": "karuna:server:*",
      "DEBUG_HIDE_DATE": "true",
      "DEBUG_COLORS": "true"
    }
  },
  "devDependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "chai": "^4.3.4",
    "esbuild": "^0.12.20",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^15.0.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "eventemitter3": "^4.0.7",
    "jquery": "^3.6.0",
    "js-cookie": "^2.2.1",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "passwd-strength": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.4.0",
    "store2": "^2.12.0",
    "tiny-markdown-editor": "0.1.4",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "aws4": "^1.11.0",
    "bcrypt": "^5.0.1",
    "chokidar": "^3.5.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "4.3.2",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "ibm-watson": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "3.6.3",
    "mongodb-client-encryption": "1.2.6",
    "morgan": "1.10.0",
    "rate-limiter-flexible": "^2.2.4",
    "saslprep": "^1.0.3",
    "socket.io": "^4.1.3",
    "supports-color": "^9.0.2"
  }
}
