{
  "name": "karuna-server",
  "version": "0.1.0",
  "description": "Backend server / RESTful API for the Karuna communication tool.",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "set DEBUG=watch,server,server:* DEBUG_HIDE_DATE=true DEBUG_COLORS=true & node watchCode.mjs",
    "devbash": "bash -c 'DEBUG=watch,server,server:* DEBUG_HIDE_DATE=true DEBUG_COLORS=true node watchCode.mjs'",
    "build": "esbuild --platform=node --bundle --external:saslprep --external:bcrypt --external:sqlite3 --external:utf-8-validate --external:bufferutil --minify --outfile=dist/server.js src/server.js",
    "postbuild": "bash postBuild.sh"
  },
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "private": true,
  "devDependencies": {
    "aws4": "^1.11.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "chokidar": "^3.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "4.2.0",
    "dotenv": "^8.2.0",
    "esbuild": "^0.5.26",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "3.2.25",
    "eventemitter3": "^4.0.7",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "3.6.3",
    "mongodb-client-encryption": "1.1.0",
    "morgan": "1.10.0",
    "socket.io": "^3.0.0",
    "store2": "^2.12.0",
    "supports-color": "^7.2.0",
    "tiny-markdown-editor": "0.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "ejs": "^3.1.5",
    "file-system": "2.2.2",
    "handlebars": "^4.7.6",
    "saslprep": "^1.0.3"
  }
}
