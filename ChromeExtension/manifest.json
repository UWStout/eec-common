{
  "manifest_version": 2,
  "name": "empathetic-electronic-communication-extension",
  "version": "0.0.1",
  "description": "Chrome extension for the EEC system to help with empathetic communication over electronic tools.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png"
  },
  "browser_action": {
    "default_title": "EEC Extension Settings",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "*://teams.microsoft.com/*",
      "*://*.discord.com/*",
      "*://*.discord.gg/*"
    ], "js": [
      "webcomponents-bundle.js",
      "browser-polyfill.min.js",
      "jquery.slim.min.js",
      "popper.min.js",
      "in-content.js"
    ]
  }],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
  "permissions": [
    "storage",
    "tabs",
    "*://*.teams.microsoft.com/*",
    "*://*.discord.com/*",
    "*://*.discord.gg/*",
    "http://localhost:3000/",
    "activeTab",
    "webRequest",
    "webRequestBlocking"
  ]
}
